<%- include('header') -%>
    <br>
    <br>
    <br>
    <div class="text-center center-div" id="login">
        <div class="container w-25 border py-5">
            <div class="title">
                <h2 class="font-weight-bold text-center">Login System</h2>
                <% if(locals.logout){%>
                    <div class="alter alert-success text-center">
                        <%=logout%>
                    </div>
                    <%}%>
                        <br>
                        <br>
            </div>
            <form action="/route/login" method="POST">
                <div class="form-group text-left">
                    <label for="password"><strong>Enter email id</strong></label>
                    <input type="email" class="form-control" placeholder="email" name="email">
                </div>
                <div class="form-group text-left">
                    <label for="password"><strong>Enter password</strong></label>
                    <input type="password" class="form-control" name="password" placeholder="password">
                </div>
                <button type="submit" class="btn btn-success" value="submit">Submit</button>
            </form>
        </div>
    </div>

    <%- include('footer') -%>